{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Task List Schema",
  "type": "object",
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "task_number": {
            "type": "integer",
            "minimum": 1
          },
          "prompt_title": {
            "type": "string"
          },
          "prompt_description": {
            "type": "string"
          },
          "solutions": {
            "type": "object",
            "properties": {
              "generated_by": {
                "type": "string"
              },
              "java": {
                "type": "string"
              },
              "c": {
                "type": "string"
              },
              "cpp": {
                "type": "string"
              },
              "python": {
                "type": "string"
              }
            },
            "required": ["java", "c", "cpp", "python"]
          },
          "hints": {
            "type": "object",
            "properties": {
              "java": {
                "type": "string"
              },
              "c": {
                "type": "string"
              },
              "cpp": {
                "type": "string"
              },
              "python": {
                "type": "string"
              }
            }
          },
          "source": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "comments": {
            "type": "string"
          }
        },
        "required": ["task_number", "prompt_description", "solutions", "source"]
      }
    }
  },
  "required": ["tasks"]
}
